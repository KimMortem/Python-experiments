from art import logo
print(logo)



bidding_over = True
bid_list = {}

def find_highest_bidder(bid_list):
    winner = ""
    highest_bid = 0

    for bidder in bid_list:
        bid_amount = bid_list[bidder]
        if bid_amount > highest_bid:
            highest_bid = bid_amount
            winner = bidder
    print(f"Highest bidder is {bidder} with bid of {highest_bid}$")

while bidding_over:
    name = input("what's your name?\n")
    bid = int(input("how much you want to bid?\n$"))
    bid_list[name] = bid
    end = input("is there anybody else who want to bid? type yes or no\n")

    if end == "yes":
        print("\n" * 100)
        print("your turn")
    else:
        bidding_over = False
        find_highest_bidder(bid_list)
