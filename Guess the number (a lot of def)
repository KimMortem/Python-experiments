from art import logo
import random

HARD_LEVEL_TURNS = 5
EASY_LEVEL_TURNS = 10


def rules(user_guess, answer, turns):
    "rules when you lose a live and when u won/lose"
    if user_guess > answer:
        print("Too high.\n")
        return turns - 1
    elif user_guess < answer:
        print("Too low.\n")
        return turns - 1
    else:
        print("You got it!")


def level_difficulty():
    """easy or hard"""
    difficulty = input("Choose a difficulty. Type 'easy' or 'hard'.\n")
    if difficulty == "easy":
        return EASY_LEVEL_TURNS
    else:
        return HARD_LEVEL_TURNS


def game():
    print(logo)
    print("Welcome to number guessing game!\n")
    print("I'm thinking a number between 1 and 100\n")
    answer = random.randint(1, 100)
    print(f"Pssst. This is current number: {answer}\n")

    turns = level_difficulty()

    guess = 0

    while guess != answer:
        guess = int(input(f"You have {turns} attempts.\n"
                       f"Make a guess:"))
        turns = rules(guess, answer, turns)
        if turns == 0:
            print("You lose")
            return
        elif guess != answer:
            print("Guess Again")

game()
