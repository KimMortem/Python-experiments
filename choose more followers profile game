#pulling data from game_data where informations looks like this:
#        'name': 'Kim Kardashian',
#        'follower_count': 167,
#        'description': 'Reality TV personality and businesswoman',
#        'country': 'United States'

from game_data import data

game_over = False
score = 0

while not game_over:

    data_A = random.choice(data)
    data_B = random.choice(data)
    if data_A == data_B:
        data_A = random.choice(data)

    followers_A = data_A["follower_count"]
    followers_B = data_B["follower_count"]

    print(f"Compare A: {data_A["name"]}, a {data_A["description"]} from {data_A["country"]}")
    print(f"Against B: {data_B["name"]}, a {data_B["description"]} from {data_B["country"]}")

    choice = input("Who has more followers? Type A or B:")

    if choice == "A" and followers_A > followers_B:
        score += 1
        print(f"You guessed it. Your score is {score}")
    elif choice == "B" and followers_A < followers_B:
        score += 1
        print(f"You guessed it. Your score is {score}")
    else:
        game_over = True
        score == 0
        print("You have lost")
