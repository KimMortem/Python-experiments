alphabet = ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u', 'v', 'w', 'x', 'y', 'z']
direction = input("Type encrypt or decrypt:\n").lower()
text = input("Type your message:\n").lower()
shift = int(input("Type the shift number:\n"))

def decrypt(text,shift):

    added_positions = []

    for letter in text:
        position = alphabet.index(letter)
        added_positions.append(position)

    decoded_text = ""

    for position in added_positions:
        letter = alphabet[position+shift]
        decoded_text += letter

    print(decoded_text)

def encrypt(text,shift):

    added_positions = []

    for letter in text:
        position = alphabet.index(letter)
        added_positions.append(position)

    decoded_text = ""

    for position in added_positions:
        letter = alphabet[position-shift]
        decoded_text += letter

    print(decoded_text)

if direction == "decrypt":
    decrypt(text,shift)
elif direction == "encrypt":
    encrypt(text,shift)
else:
    print("invalid")
